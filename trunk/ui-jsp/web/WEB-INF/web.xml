<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <description>Bug4j</description>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/bugDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>derbynet</servlet-name>
        <servlet-class>org.apache.derby.drda.NetServlet</servlet-class>
        <init-param>
            <param-name>startNetworkServerOnInit</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>portNumber</param-name>
            <param-value>1527</param-value>
        </init-param>
        <!--
        The "host" parameter allows configuration of the host name that will
        be used for the listening socket for network connections. By default,
        the Network Server will listen to requests only on the loopback
        address, which means that it will only accept connections from the
        local host. Changing this value could expose the server to
        external connections, which raises security concerns, so before using
        the "host" parameter, you should run under the Java security
        manager and enable user authentication.
        -->
        <init-param>
            <param-name>host</param-name>
            <param-value>localhost</param-value>
        </init-param>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>derbynet</servlet-name>
        <url-pattern>/derbynet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InServlet</servlet-name>
        <servlet-class>org.bug4j.server.jsp.InServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InServlet</servlet-name>
        <url-pattern>/in</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BugServlet</servlet-name>
        <servlet-class>org.bug4j.server.jsp.BugServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BugServlet</servlet-name>
        <url-pattern>/bug</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StartupServlet</servlet-name>
        <servlet-class>org.bug4j.server.jsp.StartupServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>StartupServlet</servlet-name>
        <url-pattern>/whyShouldIHaveAMappingQmQmQm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Bug4jService</servlet-name>
        <servlet-class>org.bug4j.server.gwt.server.Bug4jServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bug4jService</servlet-name>
        <url-pattern>/gwt/Bug4jService</url-pattern>
    </servlet-mapping>

    <security-role>
        <role-name>bug4j-ui</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>bug4j Console</web-resource-name>
            <url-pattern>/ui/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>bug4j-ui</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>default</realm-name>
    </login-config>
</web-app>
