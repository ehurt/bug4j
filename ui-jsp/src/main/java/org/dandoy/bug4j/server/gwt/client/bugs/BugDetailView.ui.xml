<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .mainPanel {
            padding: 5px;
        }

        #bugdetail-header {
            font-size: large;
            padding: 5px;
        }

        .bugdetail-label {
            color: #00008b;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.mainPanel}">
        <div id="bugdetail-header">
            <span ui:field="_id"/>
            -
            <span ui:field="_title"/>
        </div>
        <table border="0">
            <tr>
                <td>
                    <g:Label addStyleNames="{style.bugdetail-label}">Message:</g:Label>
                </td>
                <td>
                    <span ui:field="_message"/>
                </td>
            </tr>
            <tr>
                <td>
                    <g:Label addStyleNames="{style.bugdetail-label}">Exception:</g:Label>
                </td>
                <td>
                    <span ui:field="_exceptionMessage"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>